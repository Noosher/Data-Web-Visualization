<!DOCTYPE html>
<html lang="en" data-theme="dark">
 @* default theme is dark; toggle switches this *@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DataWebApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DataWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    @* =====================================================================
       NAVBAR / HEADER
       ===================================================================== *@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm app-navbar border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-pill">CC</span>
                    <span class="fw-semibold">Cloud Crypto Intelligence</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end align-items-center">
                    <ul class="navbar-nav flex-grow-0 app-nav-links">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <span>Privacy</span>
                            </a>
                        </li>
                        @* placeholder for tech stack page *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="TechStack">
                                <span>Tech Stack</span>
                            </a>
                        </li>
                    </ul>

                    <span class="badge rounded-pill app-env-pill d-none d-md-inline-flex ms-2">
                        Preview Build
                    </span>

                    @* THEME TOGGLE SWITCH (inline, right side) *@
                    <div class="app-theme-switch-wrapper ms-2">
                        <input type="checkbox" id="themeToggle" class="app-theme-switch-input" />
                        <label for="themeToggle" class="app-theme-switch" aria-label="Toggle light/dark mode">
                            <span class="app-theme-switch-track">
                                <span class="app-theme-switch-icons">
                                    <span class="sun">☀️</span>
                                    <span class="moon">🌙</span>
                                </span>
                                <span class="app-theme-switch-thumb"></span>
                            </span>
                        </label>
                    </div>
                </div>
            </div>
        </nav>
    </header>



    @* =====================================================================
       MAIN APP SHELL
       ===================================================================== *@
    <div class="app-shell">
        <div class="container app-main-container">
            <main role="main" class="pb-3 app-main">
                @RenderBody()
            </main>
        </div>
    </div>



    @* STICKY ATTRIBUTION FOOTER (COINGECKO + NEON) *@
    <footer class="cg-footer">
        <div class="container-fluid d-flex justify-content-center align-items-center small">
            <span class="me-2">
                Price data provided by
                <a href="https://www.coingecko.com/en/api" target="_blank" rel="noopener noreferrer">
                    CoinGecko
                </a>
            </span>

            <span class="text-muted">|</span>

            <span class="ms-2">
                Database hosting provided by
                <a href="https://neon.tech" target="_blank" rel="noopener noreferrer">
                    Neon Postgres
                </a>
            </span>

            <span class="ms-2 text-muted d-none d-md-inline">
                (Uses third-party services; no affiliation or endorsement implied.)
            </span>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @* THEME TOGGLER SCRIPT WITH PERSISTENCE *@
    <script>
        (function () {
            const root = document.documentElement;
            const toggle = document.getElementById('themeToggle');
            if (!toggle) return;

            const storedTheme = localStorage.getItem('app-theme') || 'dark';
            root.setAttribute('data-theme', storedTheme);
            toggle.checked = (storedTheme === 'dark');

            const applyTheme = (theme) => {
                root.setAttribute('data-theme', theme);
                localStorage.setItem('app-theme', theme);
                toggle.checked = (theme === 'dark');
            };

            toggle.addEventListener('change', function () {
                const next = this.checked ? 'dark' : 'light';
                applyTheme(next);
            });
        })();
    </script>
</body>
</html>
